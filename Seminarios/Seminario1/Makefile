###############################################################################
# Makefile
###############################################################################

SRC = $(wildcard *.c *.cc *.cpp)
EXE = $(basename $(SRC))

CFLAGS = -fopenmp -O3 -std=c99 -Wall -Wl,--no-as-needed
CXXFLAGS = $(CFLAGS:c99=c++0x) -D _GLIBCXX_USE_NANOSLEEP
LDFLAGS = -lrt

###############################################################################

default: $(EXE)

all: default

clean:
	$(RM) -fv $(EXE) core.* *~

###############################################################################

.PHONY: all clean default
.NOEXPORT:

###############################################################################
